{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST:-localhost};Database=${DB_NAME:-ViaggiaDB};User Id=${DB_USER};Password=${DB_PASSWORD};Encrypt=${DB_ENCRYPT:-true};TrustServerCertificate=${DB_TRUST_CERT:-false};Connection Timeout=${DB_TIMEOUT:-30};${DB_AUTH_PARAM}"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER:-viaggia-api}",
    "Audience": "${JWT_AUDIENCE:-viaggia-client}",
    "ExpiryHours": "${JWT_EXPIRY_HOURS:-2}"
  },
  "Stripe": {
    "SecretKey": "${STRIPE_SECRET_KEY}",
    "PublishableKey": "${STRIPE_PUBLISHABLE_KEY}",
    "WebhookSecret": "${STRIPE_WEBHOOK_SECRET}"
  },
  "Authentication": {
    "Google": {
      "ClientId": "${GOOGLE_CLIENT_ID}",
      "ClientSecret": "${GOOGLE_CLIENT_SECRET}"
    }
  },
  "EmailSettings": {
    "SmtpServer": "${EMAIL_SMTP_SERVER:-smtp.gmail.com}",
    "Port": "${EMAIL_PORT:-587}",
    "Username": "${EMAIL_USERNAME}",
    "Password": "${EMAIL_PASSWORD}",
    "FromName": "${EMAIL_FROM_NAME:-Viaggia Travel}",
    "FromAddress": "${EMAIL_FROM_ADDRESS:-noreply@viaggia.com}",
    "EnableSsl": "${EMAIL_ENABLE_SSL:-true}"
  },
  "Smtp": {
    "Host": "${SMTP_HOST:-smtp.gmail.com}",
    "Port": "${SMTP_PORT:-587}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromEmail": "${SMTP_FROM_EMAIL}",
    "FromName": "${SMTP_FROM_NAME:-Viaggia Societa Albergo}"
  },
  "ViaggiaBusiness": {
    "ReservationTimeout": "${RESERVATION_TIMEOUT:-15}",
    "RefundPolicy": {
      "CancellationFeePercentage": "${CANCELLATION_FEE_PERCENTAGE:-10}",
      "FreeCancellationDays": "${FREE_CANCELLATION_DAYS:-7}",
      "NoRefundDays": "${NO_REFUND_DAYS:-1}"
    },
    "HotelNotification": {
      "AutoConfirmReservations": "${AUTO_CONFIRM_RESERVATIONS:-true}",
      "SendVouchersEmail": "${SEND_VOUCHERS_EMAIL:-true}",
      "NotifyPartnersOnCancellation": "${NOTIFY_PARTNERS_ON_CANCELLATION:-true}"
    }
  },
  "AppSettings": {
    "BaseUrl": "${API_BASE_URL:-http://localhost:5000}",
    "Environment": "${API_ENVIRONMENT:-Production}",
    "EnableSwagger": "${ENABLE_SWAGGER:-false}",
    "EnableDetailedErrors": "${ENABLE_DETAILED_ERRORS:-false}",
    "MaxFileSizeMB": "${MAX_FILE_SIZE_MB:-10}",
    "UploadPath": "${UPLOAD_PATH:-wwwroot/Uploads}"
  },
  "CORS": {
    "AllowedOrigins": [
      "${FRONTEND_URL:-http://localhost:5173}",
      "${PRODUCTION_FRONTEND_URL:-https://your-production-frontend.com}"
    ]
  }
}
